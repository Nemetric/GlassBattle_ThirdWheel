<Page
    x:Class="ThirdWheel.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ThirdWheel"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="grid" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Rectangle x:Name="rect" Fill="{Binding Filll, RelativeSource={RelativeSource Mode=Self}}" Stroke="Black" Loaded="rect_Loaded" Margin="-10,10,10,-10"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Margin="79,62,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Visibility="Collapsed"/>
        <Rectangle x:Name="rPad" Fill="#FFF4F4F5" HorizontalAlignment="Right" Height="66" Margin="0,0,10,3" Stroke="Black" VerticalAlignment="Center" Width="18" RenderTransformOrigin="0.5,0.5" />
        <Rectangle x:Name="lPad" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="66" Margin="10,0,0,-0.6" Stroke="Black" VerticalAlignment="Center" Width="18"/>
        <Ellipse x:Name="Puck" Fill="#FFF4F4F5" HorizontalAlignment="Center" Height="13" Margin="0" Stroke="Black" VerticalAlignment="Center" Width="13"/>

    </Grid>
</Page>
